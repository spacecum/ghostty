theme =  Builtin Tango Dark
background-opacity = 0.8

font-feature = -calt
font-family = JetBrainsMono Nerd Font

gtk-titlebar = false

shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing

# Set unlimited scrollback
keybind = ctrl+alt+up=unbind
keybind = ctrl+alt+right=unbind
keybind = ctrl+alt+down=unbind
keybind = ctrl+alt+left=unbind
keybind = ctrl+shift+t=unbind
keybind = ctrl+shift+n=unbind

keybind = unconsumed:ctrl+shift+h=goto_split:left
keybind = unconsumed:ctrl+shift+l=goto_split:right
keybind = unconsumed:ctrl+shift+j=goto_split:bottom
keybind = unconsumed:ctrl+shift+k=goto_split:top
keybind = unconsumed:ctrl+d=unbind
keybind = unconsumed:ctrl+f=scroll_page_down
keybind = unconsumed:ctrl+b=scroll_page_up
keybind = unconsumed:ctrl+l=clear_screen

keybind = ctrl+t=new_tab
keybind = ctrl+n=new_window
keybind = ctrl+shift+f=toggle_maximize
keybind = ctrl+w=close_window
